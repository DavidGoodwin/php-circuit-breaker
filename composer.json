{
    "name": "davidgoodwin/php-circuit-breaker",
    "type": "library",
    "description": "PHP Circuit Breaker component",
    "keywords": ["circuit breaker","graceful", "error handling"],
    "license": "MIT",
    "homepage": "https://github.com/DavidGoodwin/php-circuit-breaker",
    "authors": [
      {
        "name": "Artur Ejsmont",
        "homepage": "http://artur.ejsmont.org/blog/",
        "role": "Developer"
      },
      {
        "name" : "Glenn Eggleton",
        "homepage" : "http://bolt.tamingtheelephpant.com",
        "role" : "Developer"
      },
      {
        "name": "David Goodwin",
        "homepage": "https://github.com/DavidGoodwin",
        "role": "Developer"
      }
    ],
    "suggest" : {
        "tedivm/stash": "^1.0"
    },
    "require": {
        "php": ">=7.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "tedivm/stash": "^0.17|^1.0",
        "psalm/phar": "^6",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "tests": "@php vendor/bin/phpunit tests --do-not-cache-result ",
        "psalm": "@php vendor/bin/psalm.phar --no-cache src",
        "phpcs": "@php vendor/bin/phpcs --standard=PSR12 --exclude=Generic.Files.LineLength  src/ tests",
        "phpcbf": "@php vendor/bin/phpcbf --standard=PSR12 src/ tests/"
    },
    "autoload": {
        "psr-4": {
            "DavidGoodwin\\CircuitBreaker\\": "src/CircuitBreaker"
        }
    }
}
